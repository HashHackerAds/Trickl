<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chromecast_bottom_sheet_max_height"
    android:background="@color/chromecast_bottom_sheet_background"
    android:clipToPadding="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chromecast_bottom_sheet_max_height"
        android:orientation="vertical">

        <include
            android:id="@+id/bottom_sheet_layout_full"
            layout="@layout/bottom_sheet_chromecast_full"
            android:visibility="visible"/>

        <include
            android:id="@+id/bottom_sheet_layout_peek"
            layout="@layout/bottom_sheet_chromecast_peek"
            android:visibility="gone"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>