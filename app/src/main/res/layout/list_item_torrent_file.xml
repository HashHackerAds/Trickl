<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackoutBackground"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/torrentFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="name" />

                <TextView
                    android:id="@+id/torrentFileSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="size" />
            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:id="@+id/dropDownActionButtons"
            android:visibility="gone">

            <View
                android:id="@+id/shadow"
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:background="@drawable/shadow">
            </View>


            <View
                android:id="@+id/centre_line_download"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/playFileFab"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="60dp"
                android:layout_toStartOf="@+id/centre_line_download"
                android:src="@drawable/ic_view_file"
                android:layout_marginTop="12dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/downloadFileFab"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="60dp"
                android:layout_toEndOf="@+id/centre_line_download"
                android:src="@drawable/ic_download"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>